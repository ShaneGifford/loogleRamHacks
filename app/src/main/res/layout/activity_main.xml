<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shanegifford.loogle.MainActivity">

    <Button
        android:id="@+id/button_filters"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="69dp"
        android:layout_marginStart="69dp"
        android:text="Filters"
        android:textSize="36sp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_emergency"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginEnd="69dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="68dp"
        android:text="Emergency"
        android:textSize="36sp"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="122dp"
        app:layout_constraintTop_toBottomOf="@+id/button_emergency"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/textLong" />

    <TextView
        android:id="@+id/textLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintTop_toBottomOf="@+id/textLat" />

    <Button
        android:id="@+id/button_getCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Coords"
        app:layout_constraintBottom_toTopOf="@+id/textLat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>
